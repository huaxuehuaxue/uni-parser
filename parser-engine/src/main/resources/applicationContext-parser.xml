<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.local.labs.parser.engine"/>

    <import resource="classpath:/applicationContext-common.xml"/>
    <import resource="classpath:/applicationContext-dao.xml"/>
    <import resource="classpath:/applicationContext-service.xml"/>

    <bean id="kafkaZookeeperAddress" class="java.lang.String">
        <constructor-arg value="127.0.0.1:2181"/>
    </bean>

    <bean id="kafkaBrokers" class="java.lang.String">
        <constructor-arg value="127.0.0.1:9092"/>
    </bean>

    <bean id="parserGroup" class="java.lang.String">
        <constructor-arg value="parserGroup"/>
    </bean>

    <bean id="parserTopic" class="java.lang.String">
        <constructor-arg value="parserTopic"/>
    </bean>
</beans>
